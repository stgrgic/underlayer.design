//Small bits

.line-input
    background-color rgba(13,209,255, 0.03)
    border none
    border-bottom 2px rgba(13,209,255, 0.3) solid
    padding 8px 12px
    display block
    &:focus, &:active
        outline none
        border-bottom 2px rgba(13,209,255, 1) solid

.line-textarea
    @extend .line-input
    
.small-link
    font-size 14px
    
.b
    font-weight 700
    
.dribbble
    width 150px
    height 42px
    background-image url(/assets/img/dribbble%402x.png)
    background-repeat no-repeat
    background-size 100%
    margin-left 30px
    

.logo
    color $dark-gray
    position relative
    padding-left 38px
    font-size 18px
    opacity 1
    &:after
        content ""
        position absolute
        display block
        background-image url(/assets/img/underlayer-logo@2x.png)
        background-repeat no-repeat
        background-size 100%
        width 28px
        height 50px
        left 0
        bottom 0
        
.git
    margin 60px 0 0
    border-top 1px solid lighten($light-blue, 80%)
    padding 40px 0 0
    
.img-resp
    margin 0 -40px
    padding 0
    img
        width 100%
        