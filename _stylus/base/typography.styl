//Typography

body
    font-family $base-font-family
    font-size $base-font-size
    line-height $base-line-height
    color $text-color
    font-weight 400
    
h1,h2,h3,h4,h5,h6
    color $dark-gray
    line-height 1
    letter-spacing -0.03em
    font-weight 700
h1
    font-size 52px
    margin-bottom 40px
    
h2
    font-size 42px
    margin-bottom 30px
    margin-top 80px
    
h3
    font-size 32px
    margin-top 80px
    margin-bottom 20px
    